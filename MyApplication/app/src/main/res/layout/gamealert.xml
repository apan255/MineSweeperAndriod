<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dip"
    tools:context=".MyActivity"
    android:id="@+id/game_alert"
    android:weightSum="1">

    <TextView
        android:id="@+id/game_alert_win"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:text="@string/game_alert_win"
        android:layout_weight="0.18"
        android:layout_above="@+id/exitGameButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/newGameButton"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/exitGameButton"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="@string/exitGame"
        android:layout_alignTop="@+id/newGameButton"
        android:layout_alignEnd="@+id/game_alert_win" />

</RelativeLayout>